<!DOCTYPE html>
<style>
    .mainbox {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-image: url("/images/bg.webp");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .innerbox {
        padding-top: 100px;
        width: 1300px;
        height: 620px;
        background-color: #ffffff;
    }

    .login {
        padding: 20px;
        width: 400px;
        height: 480px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 10px gray;
    }

    .smallbox {
        padding: 10px;
        width: 300px;
        height: 60px;
        background-color: #ffffff;
        border-radius: 10px;
    }
</style>
<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css" />


    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="mainbox">

        <div style="display: flex; flex-direction:row ; justify-content:space-around ; ;">

            <div class="login">
                <form action="/admin/check_admin_login" method="post">
                    <center>
                        <div>
                            <h4 style="font-family: 'Arima', cursive; font-weight: bold ; color: #ffffff;">Login</h4>
                            <br>
                            <div class="input-field col s12 smallbox">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="icon_prefix" name="emailid" id="emailid" type="text" class="validate">
                                <label for="icon_prefix">Emailid</label>
                            </div><br>
                            <div class="input-field col s12 smallbox">
                                <i class="material-icons prefix">lock</i>
                                <input id="icon_prefix" type="password" name="password" id="password" class="validate">
                                <label for="icon_prefix">Password</label>
                            </div>
                            <p style="display: flex; padding-left: 50px;">
                                <label>
                                    <input type="checkbox" class="filled-in" value="" name="pass" />
                                    <span>Remember Password</span>
                                </label>
                            </p><br>
                            <div>
                                <button class="btn waves-effect waves-light" type="submit" name="action">LOGIN

                                </button>
                            </div>
                            <div style="color:red;font-size:16px;font-weight:bold;padding:5px;margin:5px;">
                                <%= message %>
                            </div>
                        </div>
                    </center>
                </form>
            </div>
        </div>

    </div>
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

</html>